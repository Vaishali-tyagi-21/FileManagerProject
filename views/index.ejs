<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>File System Manager</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container mt-5">
    <h1>File System Manager</h1>

    <h2>Current Directory Contents:</h2>
    <ul class="list-group">
      <% for (const file of files) { %>
        <li class="list-group-item">
          <span><%= file.name %></span>
          <% if (file.isDirectory) { %>
            <span class="badge bg-primary">Folder</span>
          <% } else { %>
            <span class="badge bg-secondary">File</span>
          <% } %>
          <span class="badge bg-light text-dark"><%= file.timestamp %></span>
        </li>
      <% } %>
    </ul>

    <h2>Create New Folder:</h2>
    <form action="/create-folder" method="post" class="form-group">
      <div class="input-group">
        <input type="text" name="folderName" class="form-control" placeholder="Enter folder name">
        <button type="submit" class="btn btn-create">Create Folder</button>
      </div>
    </form>
    
    <h2>Create New File:</h2>
    <form action="/create-file" method="post" class="form-group">
      <div class="input-group">
        <input type="text" name="fileName" class="form-control" placeholder="Enter file name">
        <button type="submit" class="btn btn-create">Create File</button>
      </div>
    </form>
    

    <form action="/rename" method="post" class="form-group">
      <div class="input-group">
        <input type="text" name="oldName" class="form-control" placeholder="Enter old name" required>
        <input type="text" name="newName" class="form-control" placeholder="Enter new name" required>
        <button type="submit" class="btn btn-rename">Rename</button>
      </div>
    </form>

    <form action="/delete" method="post" class="form-group">
      <div class="input-group">
        <input type="text" name="name" class="form-control" placeholder="Enter name to delete" required>
        <button type="submit" class="btn btn-delete">Delete</button>
      </div>
    </form>
  </div>
</body>
</html>
